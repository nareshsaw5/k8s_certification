apiVersion: apps/v1
kind: Deployment
metadata:
  creationTimestamp: null
  labels:
    app: bigger-memory
  name: bigger-memory
spec:
  replicas: 1
  selector:
    matchLabels:
      app: bigger-memory
  strategy: {}
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: bigger-memory
    spec:
      containers:
      - image: busybox
        name: busybox
        command:
        - sh
        - -c
        - "echo 'I need bigger memory'; sleep 1d"
        resources:
          requests:
            memory: 3Gi
        resizePolicy:
        - resourceName: memory
          restartPolicy: NotRequired


